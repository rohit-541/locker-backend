generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  mobile    String
  email     String   @unique
  password  String
  lockers   Locker[]        // back relation matches Locker.user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lockerOTP LockerOTP[]
}

model Locker {
  id        String   @id @default(uuid())
  name      String
  prices    Int
  content   String?
  userId    String?
  status    Status
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?     @relation(fields: [userId], references: [id])
  lockerOTP LockerOTP[]
}

model otp{
  id        String   @id @default(uuid())
  email     String   @unique
  otp       String
  validTill DateTime
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LockerOTP{
  id        String   @id @default(uuid())
  lockerId  String
  otp       String   
  validTill DateTime
  userId    String  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locker    Locker   @relation(fields: [lockerId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}


enum Status {
  NONE
  OPEN
  CLOSED
}